<?php

namespace {namespace}\Providers;

use Zhiyi\Plus\Support\PackageHandler;
use Illuminate\Support\ServiceProvider;

class AppServiceProvider extends ServiceProvider
{
    /**
     * Boorstrap the service provider.
     *
     * @return void
     */
    public function boot()
    {
        // Register a database migration path.
        $this->loadMigrationsFrom($this->app->make('path.{name}.migrations'));

        // Register translations.
        $this->loadTranslationsFrom($this->app->make('path.{name}.lang'), '{name}');

        // Register view namespace.
        $this->loadViewsFrom($this->app->make('path.{name}.resource').'/views', '{name}');

        // Publish public resource.
        $this->publishes([
            $this->app->make('path.{name}.asstes') => $this->app->publicPath().'/{name}',
        ], 'public');

        // Publish config.
        $this->publishes([
            $this->app->make('path.{name}.config').'/{name}.php' => $this->app->configPath('{name}.php'),
        ], 'config');
    }

    /**
     * Register the service provider.
     *
     * @return void
     */
    public function register()
    {
        // Bind all of the package paths in the container.
        $this->app->instance('path.{name}', $path = dirname(dirname(__DIR__)));
        $this->app->instance('path.{name}.database', $path.'/database');
        $this->app->instance('path.{name}.migrations', $path.'/database/migrations');
        $this->app->instance('path.{name}.seeds', $path.'/database/seeds');
        $this->app->instance('path.{name}.asstes', $path.'/asstes');
        $this->app->instance('path.{name}.resource', $path.'/resource');
        $this->app->instance('path.{name}.lang', $path.'/resource/lang');
        $this->app->instance('path.{name}.config', $configPath = $path.'/config');

        // Merge config.
        $this->mergeConfigFrom($configPath.'/{name}.php', '{name}');

        // register cntainer aliases
        $this->registerContainerAliases();

        // Register singletons.
        $this->registerSingletions();

        // Register Plus package handlers.
        $this->registerPackageHandlers();
    }

    /**
     * Register singletons.
     *
     * @return void
     */
    protected function registerSingletions()
    {
        // Owner handler.
        $this->app->singleton('{name}:handler', function () {
            return new \{namespace}\Handlers\PackageHandler();
        });

        // Develop handler.
        $this->app->singleton('{name}:dev-handler', function ($app) {
            return new \{namespace}\Handlers\DevPackageHandler($app);
        });
    }

    /**
     * Register container aliases.
     *
     * @return void
     */
    protected function registerContainerAliases()
    {
        $aliases = [
            '{name}:handler' => [
                \{namespace}\Handlers\PackageHandler::class,
            ],
            '{name}:dev-handler' => [
                \{namespace}\Handlers\DevPackageHandler::class,
            ],
        ];

        foreach ($aliases as $key => $aliases) {
            foreach ($aliases as $key => $alias) {
                $this->app->alias($key, $alias);
            }
        }
    }

    /**
     * Register Plus package handlers.
     *
     * @return void
     */
    protected function registerPackageHandlers()
    {
        $this->loadHandleFrom('{name}', '{name}:handler');
        $this->loadHandleFrom('{name}-dev', '{name}:dev-handler');
    }

    /**
     * Register handler.
     *
     * @param string $name
     * @param \Zhiyi\Plus\Support\PackageHandler|string $handler
     * @return void
     */
    private function loadHandleFrom(string $name, $handler)
    {
        PackageHandler::loadHandleFrom($name, $handler);
    }
}
